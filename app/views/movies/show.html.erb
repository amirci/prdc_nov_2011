<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Description:</b>
  <%= @movie.description %>
</p>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<h2>Reviews</h2>
<%= "None yet..." if @movie.reviews.empty? %>
<ul>
<% @movie.reviews.each do |r| %>
<li> <%= "Stars: #{r.stars}, #{r.comment} by #{r.name}" %> </li>
<% end %>
</ul>